<?xml version="1.0" encoding="UTF-8"?>
<qes_xspectra:xspectra xsi:schemaLocation="http://www.quantum-espresso.org/ns/qes/qes_xspectra-1.0 xspectra.xsd"
               xmlns:qes_xspectra="http://www.quantum-espresso.org/ns/qes/qes_xspectra-1.0"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
	       <input>	       
      <input_xspectra>
        <calculation>xanes_dipole</calculation>
        <edge>L2</edge>
        <verbosity>high</verbosity>
        <prefix>Cu</prefix>
        <outdir>$TMP_DIR/</outdir>
        <xniter>50</xniter>
        <xcheck_conv>500</xcheck_conv>
        <xepsilon1>1.0</xepsilon1>
        <xepsilon2>1.0</xepsilon2>
        <xepsilon3>1.0</xepsilon3>
        <xe0>11.5335</xe0>
        <xerror>0.01</xerror>
      </input_xspectra>
      <plot>
        <xnepoint>1000</xnepoint>
        <xgamma>0.5</xgamma>
        <xemax>-10.</xemax>
        <xemin>80.0</xemin>
        <terminator>true</terminator>
        <cut_occ_states>true</cut_occ_states>
      </plot>
      <pseudos>
        <filecore>Cu.wfc</filecore>
        <r_paw1>2.0</r_paw1>
        <r_paw3>2.0</r_paw3>
      </pseudos>
      <k_points_IBZ>
        <monkhorst_pack nk1="3" nk2="3" nk3="3" k1="0" k2="0" k3="0">K-point mesh</monkhorst_pack>
      </k_points_IBZ>
</input>
</qes_xspectra:xspectra>
